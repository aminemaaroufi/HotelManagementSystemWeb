<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewData["Title"] ?? "Default Title") - My Application</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HotelManagement.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">


    <style>
        .container {
            margin: 0;
        }

        .btn {
            margin: 10px;
        }

        .hero {
            width: 100vw; /* Full width of the viewport */
            height: 100vh; /* Full height of the viewport */
            background-image: url('/images/hotel-banner.jpg');
            background-size: cover; /* Ensure the image covers the entire section */
            background-position: center; /* Center the image */
            background-repeat: no-repeat; /* Prevent the image from repeating */
            display: flex;
            justify-content: center;
            align-items: center; /* Vertically center content */
            color: black; /* Text color */
            text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5); /* Add a subtle text shadow */
            margin: 0; /* Remove default margin */
        }

        .blurbg {
            background: rgba(255, 255, 255, 0.4); /* Semi-transparent black background */
            backdrop-filter: blur(10px); /* Apply the blur effect */
            padding: 30px; /* Add some padding around the text */
            border-radius: 10px; /* Rounded corners for a sleek look */
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3); /* Add a subtle shadow for depth */
            display: inline-block; /* Make the box fit the content */
        }

            .blurbg h1, .blurbg p, .blurbg a {
                margin: 10px 0;
            }


        .card {
            border: none;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .card-text {
            font-style: italic;
            color: #555;
        }

        .rounded-circle {
            width: 50px;
            height: 50px;
            object-fit: cover;
        }

        h2 {
            font-weight: bold;
            color: #333;
        }

        #testimonialsCarousel .carousel-item {
            text-align: center;
            padding: 30px 15px;
        }

        #testimonialsCarousel img {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border: 3px solid #ddd;
        }

        #testimonialsCarousel p {
            font-style: italic;
            color: #555;
        }

        #testimonialsCarousel h6 {
            font-weight: bold;
            margin-top: 10px;
        }

        #testimonialsCarousel small {
            color: #888;
        }

        .carousel-control-prev-icon,
        .carousel-control-next-icon {
            background-color: rgba(0, 0, 0, 0.5); /* Ensures visibility */
            border-radius: 50%; /* Optional: Makes the controls circular */
            width: 50px; /* Ensures appropriate size */
            height: 50px;
            background-size: 50%; /* Adjusts icon size */
        }


        .feature-icon {
            color: #0d6efd;
        }

        .features {
            background-color: #f8f9fa;
        }
    </style>


</head>
<body>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

